{
  "common": {
    "idle_timeout": 15,
    "upload_mode": 1,
    "setstat_mode": 1,
    "actions": {
      "execute_on": ["rename", "upload"],
      "hook": "/usr/local/bin/upload.sh"
    }
  },
  "sftpd": {
    "bind_port": 2022,
    "max_auth_tries": 0,
    "track_quota": 0,
    "banner": "Crazy Arms Radio Backend SFTP Server",
    "host_keys": [
      "id_rsa"
    ]
  },
  "data_provider": {
    "driver": "bolt",
    "name": "sftpgo.bolt",
    "users_base_dir": "/sftp_root",
    "external_auth_hook": "/usr/local/bin/auth.sh",
    "external_auth_scope": 0
  },
  "httpd": {
    "bind_port": 0
  }
}
